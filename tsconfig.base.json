{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/src/*"],
      "@ui/*": ["packages/ui/*"],
      "@utils/*": ["packages/utils/*"]
    }
  }
}
